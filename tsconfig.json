{
  "compilerOptions": {
    "rootDirs": [
      "./src",
      "./typings"
    ],
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": [
      "es5",
      "es6",
      "es2015.promise",
      "dom"
    ],
    "baseUrl": ".",
    "removeComments": true,
    "allowJs": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "compileOnSave": true,
  "files": [
    "./typings/types.d.ts",
    "./typings/external.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}